    <script src="js/common.js"></script>
    <script>
        // 데이터 로드 및 페이지 채우기
        async function loadHomePage() {
            const data = await loadData();
            if (!data) return;

            // 작가 정보
            document.getElementById('author-name').textContent = data.author.name;
            document.getElementById('author-signature').textContent = data.author.signature;

            // 최신 출간작
            if (data.books && data.books.length > 0) {
                const latestBook = data.books[0];
                const latestBookDiv = document.getElementById('latest-book');
                latestBookDiv.innerHTML = `
                    <div class="bg-white p-8 shadow-lg">
                        <div class="flex flex-col md:flex-row gap-8">
                            <div class="flex-shrink-0">
                                <img src="${latestBook.coverImage}" alt="${latestBook.title}" class="w-48 h-auto shadow-md">
                            </div>
                            <div class="flex-1">
                                <h3 class="text-2xl font-light mb-2">${latestBook.title}</h3>
                                <p class="text-gray-600 mb-4">${latestBook.publishDate} | ${latestBook.publisher}</p>
                                <p class="text-gray-700 mb-6 leading-relaxed">${latestBook.synopsis}</p>
                                <a href="book-detail.html?id=${latestBook.id}" class="inline-block px-6 py-2 bg-gray-900 text-white hover:bg-gray-700 transition-colors">자세히 보기</a>
                            </div>
                        </div>
                    </div>
                `;
            }

            // 집필 중인 책
            if (data.workInProgress) {
                const wipDiv = document.getElementById('work-in-progress');
                wipDiv.innerHTML = `
                    <div class="bg-white p-8 border-2 border-dashed border-gray-300">
                        <h3 class="text-2xl font-light mb-2">${data.workInProgress.title}</h3>
                        <p class="text-gray-600 mb-4">${data.workInProgress.expectedDate}</p>
                        <p class="text-gray-700 leading-relaxed">${data.workInProgress.description}</p>
                    </div>
                `;
            } else {
                document.getElementById('work-in-progress-section').style.display = 'none';
            }

            // 책 목록 요약 (최대 5개)
            const booksPreview = data.books.slice(0, 5);
            const booksPreviewDiv = document.getElementById('books-preview');
            booksPreviewDiv.innerHTML = booksPreview.map(book => `
                <div class="book-card cursor-pointer" onclick="window.location.href='book-detail.html?id=${book.id}'">
                    <img src="${book.coverImage}" alt="${book.title}" class="w-full h-auto mb-4 shadow-md">
                    <h4 class="text-lg font-light mb-2">${book.title}</h4>
                    <p class="text-sm text-gray-600">${book.publishDate}</p>
                </div>
            `).join('');

            // 최신 글
            if (data.writings && data.writings.length > 0) {
                const latestWriting = data.writings[0];
                document.getElementById('latest-writing').textContent = latestWriting.title;
            }

            // 최신 미디어
            if (data.media && data.media.length > 0) {
                const latestMedia = data.media[0];
                document.getElementById('latest-media').textContent = latestMedia.title;
            }
        }

        loadHomePage();
    </script>
